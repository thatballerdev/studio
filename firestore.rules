
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // --- Helper Functions ---
    function isSignedIn() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return request.auth.uid == userId;
    }
    
    function isAdmin() {
      // Ensure auth and token objects exist before accessing email
      return isSignedIn() && request.auth.token.email == 'admin@northway.com';
    }

    // --- User Profile Rules ---
    // This rule handles access to INDIVIDUAL user documents.
    match /users/{userId} {
      // Users can create, read, update, delete their own profile.
      allow read, write: if isSignedIn() && isOwner(userId);
      // Admins can read any individual user's profile.
      allow get: if isAdmin();
    }
    
    // --- Admin Collection Rule ---
    // This rule handles access for collection-level queries, like listing all users.
    // It is ONLY for the admin.
    match /users/{document=**} {
        allow list: if isAdmin();
    }

    // --- University Data Rules ---
    // Anyone can read university data.
    // Writes are restricted to prevent client-side modifications.
    match /universities/{universityId} {
      allow get, list: if true;
      allow write: if false; 
    }
  }
}
