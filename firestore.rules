
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // --- Helper Functions ---
    function isSignedIn() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return request.auth.uid == userId;
    }
    
    function isAdmin() {
      // Ensure auth and token objects exist before accessing email
      return isSignedIn() && request.auth.token.email == 'admin@northway.com';
    }

    // --- User Profile Rules ---
    match /users/{userId} {
      // Admins can get any user's profile.
      // A user can read and write to their own profile.
      allow get, update, delete: if isSignedIn() && (isAdmin() || isOwner(userId));
      allow create: if isSignedIn() && isOwner(userId);
    }
    
    // Admin can list all users for the dashboard.
    // This rule applies to collection-level queries.
    match /users/{document=**} {
        allow list: if isAdmin();
    }

    // --- University Data Rules ---
    // Anyone can read university data.
    // No one can write to university data through the client SDK.
    match /universities/{universityId} {
      allow get, list: if true;
      allow write: if false; // Protect this collection from client-side writes
    }
  }
}
