
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // --- Helper Functions ---
    function isSignedIn() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return request.auth.uid == userId;
    }
    
    function isAdmin() {
      return request.auth.token.email == 'admin@northway.com';
    }

    // --- User Profile Rules ---
    // Users can read and write to their own profile document.
    // The admin can read any user's profile document.
    match /users/{userId} {
      allow read: if isSignedIn() && (isOwner(userId) || isAdmin());
      allow write: if isSignedIn() && isOwner(userId);

      // Admin can list all users for the dashboard.
      allow list: if isSignedIn() && isAdmin();
    }
    
    // --- University Data Rules ---
    // Anyone can read university data.
    // No one can write to university data through the client SDK.
    match /universities/{universityId} {
      allow get, list: if true;
      allow write: if false; // Protect this collection from client-side writes
    }
  }
}
